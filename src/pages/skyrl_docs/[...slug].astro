---
export const prerender = false;

const slug = Astro.params.slug;
const path = Array.isArray(slug) ? slug.join('/') : 'index';
---

<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="refresh" content={`0;url=/skyrl_docs/docs/${path}.html`} />
    <title>Redirecting...</title>
  </head>
  <body>
    <p>
      Redirecting to <a href={`/skyrl_docs/docs/${path}.html`}>/skyrl_docs/docs/{path}.html</a>...
    </p>
  </body>
</html>
