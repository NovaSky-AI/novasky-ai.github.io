---
export const prerender = false;

const slug = Astro.params.slug;
const path = Array.isArray(slug) ? slug.join('/') : 'index';
---

<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="refresh" content={`0;url=/docs/${path}.html`} />
    <title>Redirecting to Documentation...</title>
  </head>
  <body>
    <p>
      Redirecting to <a href={`/docs/${path}.html`}>/docs/{path}.html</a>...
    </p>
  </body>
</html> 